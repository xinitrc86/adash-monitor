<core:FragmentDefinition xmlns:core="sap.ui.core" 
	xmlns="sap.m">
	<HBox justifyContent="SpaceBetween" class="sapUiMediumMarginEnd">
		<HBox alignItems="Center">
			<core:Icon color="Default" size="3em" src="{= ${type} === 1 ? 'sap-icon://folder-blank' : 'sap-icon://document-text' }"/>
			<VBox alignContent="Start" class="sapUiSmallMarginBegin">
				<Label text="{name}" design="Bold" />
				<Text text="{description}"/>
			</VBox>
		</HBox>
		<HBox>
			<Button icon="sap-icon://synchronize" type="Accept" tooltip="Test again" press=".onTestPackage"/>
		</HBox>
	</HBox>
</core:FragmentDefinition>